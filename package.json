{
  "name": "playwright-bdd-framework",
  "version": "1.0.0",
  "description": "Playwright framework with BDD and comprehensive reporting",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:bdd": "cucumber-js --format json:reports/cucumber-report.json --format progress-bar --format html:reports/cucumber-html-report.html --format junit:reports/cucumber-junit-report.xml",
    "test:bdd:reports": "npm run test:bdd && npm run reports:generate",
    "test:bdd:parallel": "cucumber-js --parallel 3 --format json:reports/cucumber-report.json --format progress-bar",
    "test:tags": "node cucumber.runner.js",
    "test:smoke": "node cucumber.runner.js --tags @smoke",
    "test:regression": "node cucumber.runner.js --tags @regression",
    "test:smoke:parallel": "node cucumber.runner.js --tags @smoke --parallel 3",
    "test:playwright": "npx playwright test",
    "test:both": "npm run test:playwright && npm run test:bdd",
    "test:both:smoke": "npx playwright test && node cucumber.runner.js --tags @smoke",
    "test:all:complete": "npm run test:playwright && npm run test:bdd && npm run reports:generate && npm run allure:generate",
    "reports:generate": "node generate-all-reports.js",
    "reports:open": "open reports/cucumber-html-report.html",
    "reports:serve": "npx http-server reports -p 8080 -o",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "npx http-server allure-report -p 8081 -o",
    "serve:all": "npm run reports:generate && npm run allure:generate && echo 'Reports: http://localhost:8080 | Allure: http://localhost:8081' && npx concurrently \"npx http-server reports -p 8080\" \"npx http-server allure-report -p 8081\"",
    "test:all": "npm run test:bdd && npm run reports:generate && npm run allure:generate",
    "clean": "rm -rf reports/* allure-results/* allure-report/* playwright-report/*",
    "pretest": "npm run clean"
  },
  "keywords": [
    "playwright",
    "bdd",
    "cucumber",
    "testing",
    "automation"
  ],
  "author": "Vineet Kumar",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@cucumber/cucumber": "^12.4.0",
    "@cucumber/pretty-formatter": "^1.0.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3",
    "allure-cucumberjs": "^2.15.1",
    "allure-playwright": "^3.4.3",
    "cucumber-html-reporter": "^6.0.0",
    "multiple-cucumber-html-reporter": "^3.9.3",
    "ts-node": "^10.9.2"
  }
}
